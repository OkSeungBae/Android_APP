<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:background="#B0EADAA0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/nevigation_btn" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/jua_ttf"
            android:text="  Catalog"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPet01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/review_layout_back"
        android:fontFamily="@font/jua_ttf"
        android:text="동물 병원"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPet02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/review_layout_back"
        android:fontFamily="@font/jua_ttf"
        android:text="동물 약국"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPet03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/review_layout_back"
        android:fontFamily="@font/jua_ttf"
        android:text="동물용 의료용구 판매업"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPet04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/review_layout_back"
        android:fontFamily="@font/jua_ttf"
        android:text="동물용 의약품 도매상"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPet05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/review_layout_back"
        android:fontFamily="@font/jua_ttf"
        android:text="동물장묘업"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPet06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/review_layout_back"
        android:fontFamily="@font/jua_ttf"
        android:text="동물 판매업"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/footstemp" />

</LinearLayout>