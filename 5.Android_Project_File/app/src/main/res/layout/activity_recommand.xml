<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_layout_white"
    android:orientation="vertical"
    tools:context=".ReviewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/title_recommand"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/comsl"
            android:gravity="bottom|center"
            android:hint="오늘의 추천 병원"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_recommand"
            android:layout_width="315dp"
            android:layout_height="21dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jua_ttf"
            android:hint="병원이름"
            android:textColor="@android:color/secondary_text_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_recommand" />

        <TextView
            android:id="@+id/address_recommand"
            android:layout_width="315dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/jua_ttf"
            android:hint="주소 : 대구광역시 동구 동내로"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_recommand" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="560dp"
        android:layout_gravity="center"
        android:background="@drawable/screen_layout_back"
        android:orientation="vertical">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager_recommand"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:fillViewport="true"
            android:background="#FFFFFF">


        </androidx.viewpager.widget.ViewPager>

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="306dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:fontFamily="@font/jua_ttf"
                android:text="돌아가기"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</LinearLayout>